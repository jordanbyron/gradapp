<h1>Editing Course</h1>

<%= error_messages_for :course_template %>

<% form_for :course_template, @course_template, :url => course_template_path(@course_template.header_template.ppos_template.degree_program.department, @course_template.header_template.ppos_template.degree_program, @course_template.header_template.ppos_template,@course_template.header_template), :html => { :method => :put} do |f| %>

  <p>
    <b>Short dept name</b><br />
    <%= f.text_field :short_dept_name %>
  </p>

  <p>
    <b>Course number</b><br />
    <%= f.text_field :course_number %>
  </p>

  <p>
    <b>Course name</b><br />
    <%= f.text_field :course_name %>
  </p>

  <p>
    <b>Credits</b><br />
    <%= f.text_field :credits %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Cancel', ppos_template_path(@course_template.header_template.ppos_template.degree_program.department, @course_template.header_template.ppos_template.degree_program, @course_template.header_template.ppos_template) %>
