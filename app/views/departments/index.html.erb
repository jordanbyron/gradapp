<% title 'Departments' %>

<h1>Departments</h1>

<p style="color: green"><%= flash[:notice] %></p>

<% form_tag departments_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search" %>
	</p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Short name</th>
    <th colspan=2>Controls</th>
  </tr>

<% for department in @departments %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%=h department.name %></td>
    <td><%=h department.short_name %></td>
    <td><%= link_to 'Edit', edit_department_path(department) %></td>
    <td><%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @departments %>

<p>
  <%= link_to 'Create Department', new_department_path %>
</p>