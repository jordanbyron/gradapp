<% title 'New Department' %>

<h1>New Department</h1>

<p style="color: #fff; font-style: italic"><%= flash[:notice] %></p>

<%= error_messages_for :department %>

<% form_for(@department) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Short name</b><br />
    <%= f.text_field :short_name %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', departments_path %>