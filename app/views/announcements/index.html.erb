<h1>Listing announcements</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th colspan=2>Controls</th>
  </tr>

<% for announcement in @announcements %>
  <tr>
    <td><%=h announcement.message %></td>
    <td><%=h announcement.starts_at %></td>
    <td><%=h announcement.ends_at %></td>
    <td><%= link_to image_tag("edit.png",  :class => "table_image",:border => 0), edit_announcement_path(announcement) %></td>
    <td><%= link_to image_tag("remove.png",  :class => "table_image",:border => 0), announcement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New announcement', new_announcement_path %>
