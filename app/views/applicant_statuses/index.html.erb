<h1>Applicant Statuses</h1>

<% form_tag applicant_statuses_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search" %>
	</p>
<% end %>

<table>
  <tr>
    <th>Status</th>
    <th>Short Status</th>
    <th colspan=3>Controls</th>
  </tr>

<% for applicant_status in @applicant_statuses %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%=h applicant_status.status %></td>
    <td><%=h applicant_status.short_status %></td>
    <td><%= link_to 'Show', applicant_status %></td>
    <td><%= link_to 'Edit', edit_applicant_status_path(applicant_status) %></td>
    <td><%= link_to 'Destroy', applicant_status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @applicant_statuses %>

<p>
  <%= link_to 'Create Applicant Status', new_applicant_status_path %>
</p>