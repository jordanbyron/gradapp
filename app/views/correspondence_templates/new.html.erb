<h1>New Correspondence Template</h1>

<%= error_messages_for :correspondence_template %>

<%= render :partial => 'formatting_guide' %>

<% form_for(@correspondence_template) do |f| %>
  <p>
    <b>Template Name</b><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <b>Subject</b><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :size => "100%x20" %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<p>
  <%= link_to 'Cancel', correspondence_templates_path %> | 
  <a href="#" onClick="new Effect.toggle('formatting_guide', 'slide');">Formatting Guide</a>
</p>