<% title 'Graduate Applicant | ' + @graduate_applicant.full_name + ' | Notes' %>

<p style="color: green"><%= flash[:notice] %></p>

<%= render :partial => 'graduate_applicants/navigation',
           :locals  => {:page               => 'Notes',
                        :graduate_applicant => @graduate_applicant } %>

<table>
  <tr>
    <th>Note</th>
    <th>Date Created</th>
    <th>Created By</th>
    <th colspan=2>Actions</th>
  </tr>
<% for note in @notes -%>
  <tr id="<%= dom_id(note) %>" class="<%= cycle('even', 'odd') %>">
    <td align="left">
      <%= note.note_html %>
    </td>
    <td>
      <%= note.created_date %>
    </td>
    <td>
      <%= note.created_by %>
    </td>
    <td>
      <%= link_to image_tag("edit.png",  :class => "table_image",:border => 0),
      edit_graduate_applicant_note_path(@graduate_applicant.id,note) %>
    </td>
    <td align="center">
    <%= link_to image_tag("remove.png", :border => 0), 
      note, 
      :confirm => 'Are you sure?', 
      :method => :delete %>
    </td>
  </tr>
<% end -%>
</table>

<%= will_paginate @notes %>

<% if flash[:new_note_div] %>
  <div id="new_note_div">
<% else %>
  <div id="new_note_div" style="display:none;">
<% end %>

<% form_for [@graduate_applicant, @new_note] do |f| -%>
    <br>New Note:</br>
    <br><%= f.text_area(:text, :size => "100%x10") %></br>
  <br><%= f.submit 'Add this note' %> | <%= link_to_remote "Cancel", :url => {:action => "toggle_new_note"} %></br>
<% end -%>
</div>

<p>
  <%= link_to_remote "Add Note", :url => {:action => "toggle_new_note"} %> | 
  <%= link_to 'Back to Graduate Applicants', graduate_applicants_path %>
</p>