<% title 'Graduate Applicant | ' + @graduate_applicant.full_name + ' | Correspondence' %>

<p style="color: green"><%= flash[:notice] %></p>

<div id="gradAppHeader">
  <h1><%=h @graduate_applicant.full_name %></h1>
  <% form_for(@graduate_applicant) do |f| %>
    <%= select("graduate_applicant", "applicant_status_id", ApplicantStatus.find(:all).collect {|d| [d.status, d.id] }) %>
    <%= f.submit "Update" %>
  <% end %>
</div>
<p>

  <h3>
    <%= link_to 'Contact Info', graduate_applicant_path(@graduate_applicant) %> | 
    <%= link_to 'Notes', graduate_applicant_notes_path(@graduate_applicant) %> | 
    <%= link_to_remote "Application Requirements",:update => "tab_content", :url => {:action => "show_applicant_requirement_info", :id => @graduate_applicant.id} %> | 
    Correspondence | 
    <%= link_to_remote "Planned Program of Study",:update => "tab_content", :url => {:action => "show_ppos_info", :id => @graduate_applicant.id} %>
  </h3>
</p>

<table>
  <tr>
    <th>Sent date time</th>
    <th>Text</th>
    <th>Type</th>
    <th>Show</th>
    <th>Remove</th>
  </tr>

<% for correspondence in @correspondences %>
  <tr id="<%= dom_id(correspondence) %>" class="<%= cycle('even', 'odd') %>">
    <td><%=h correspondence.sent_date_time %></td>
    <td><%=h correspondence.text %></td>
    <td><%=h correspondence.type %></td>
    <td><%= link_to 'Show', correspondence %></td>
    <td><%= link_to image_tag("remove.png", :border => 0), correspondence, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p>
  <%= link_to 'Send Correspondence', new_graduate_applicant_correspondence_path(@graduate_applicant) %> | 
  <%= link_to 'Back to Graduate Applicants', graduate_applicants_path %>
</p>