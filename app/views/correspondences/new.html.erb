<% form_for(@correspondence) do |f| %>
  <p>
    <b>Sent date time</b><br />
    <%= f.datetime_select :sent_date_time %>
  </p>

  <p>
    <b>Graduate applicant</b><br />
    <%= f.text_field :graduate_applicant_id %>
  </p>

  <p>
    <b>Template</b><br />
    <%= select( "correspondence_template", "title", CorrespondenceTemplate.find(:all, :conditions => {:department_id => @graduate_applicant.department_id}).collect {|d| [d.title, d.id] }) %>
    <%= f.submit "Use Template" %>
  <p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Cancel', graduate_applicant_correspondences_path(@graduate_applicant) %>
