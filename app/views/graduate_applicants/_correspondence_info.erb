<div id="correspondences">
  <%= render :partial => 'graduate_applicants/correspondences', 
            :locals  => { :correspondences => @graduate_applicant.correspondences,
                          :graduate_applicant => @graduate_applicant} %>
</div>

<div id="new_correspondence_div" style="display:none;">
<% remote_form_for [@graduate_applicant, @correspondence] do |f| -%>
    <br>New Correspondence:</br>
    <br><%= f.text_area(:text, :size => "50x10") %></br>
  <br><%= f.submit 'Send this correspondence' %></br>
<% end -%>
</div>

<p> 
  <%= link_to 'Back', graduate_applicants_path %>
</p>